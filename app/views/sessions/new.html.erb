<%= form_tag sessions_path, method: :post do %>
  <fieldset>
    <legend>Sign In</legend>
    <ul>
      <li>
        <%= label_tag :username %> 
        <%= text_field_tag :username %>
      </li>
      <li>
        <%= label_tag :password %> 
        <%= password_field_tag :password %>
      </li>
    </ul>
    <%= submit_tag "Sign In" %>
  </fieldset>
<% end %>
