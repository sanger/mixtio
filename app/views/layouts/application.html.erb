<!DOCTYPE html>
<html>
  <head>
    <title>Mixtio</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <%= render "header" %>
      <div class="body">
        <%= render "flashes" %>
        <%= yield %>
      </div>
      <%= render "footer" %>
    </div>
  </body>
</html>
