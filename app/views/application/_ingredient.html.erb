<li>
  <%= label_tag(:parent) %>

  <%= select_tag :parent, options_from_collection_for_select( all_ingredients, :id, :name, local_assigns.fetch(:ingredient, nil) ), { include_blank: true } %>

  <% if local_assigns.fetch(:scannable, false) %>

    <%= label_tag(:parent_barcode) %>
    <%= text_field_tag(:parent_barcode, '', data: { behavior: "scan_parent_barcode" }) %>

  <% end %>

  <%= link_to '+', "#", data: { behavior: "add_parent"},    title: "Add Parent" %>
  <%= link_to '-', "#", data: { behavior: "remove_parent"}, title: "Remove Parent" %>
</li>